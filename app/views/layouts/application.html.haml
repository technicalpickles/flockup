!!! Transitional
%html
  %head
    %title= "flockup: #{controller.controller_name}: #{controller.action_name}"
    = stylesheet_link_tag 'blueprint/screen', :media => 'screen'
    = stylesheet_link_tag 'blueprint/print', :media => 'print'
    = "<!--[if IE]>#{stylesheet_link_tag 'blueprint/ie', :media => 'screen'}<![endif]-->"
    = stylesheet_link_tag 'all'
    = stylesheet_link_tag 'screen', :media => 'screen'
    = stylesheet_link_tag 'print', :media => 'print'
  %body
    .container
      #logo{:class => 'column span-24 last'}
        %a{:href => root_path}
          = image_tag 'logo.png'
      #tabs{:class => 'tabs column span-24 last'}
        %ul{:id => 'nav'}
          = tab_for 'flocks'
          = tab_for 'flockers'
        
      #content{:class => 'column append-1 prepend-1 span-22'}
        - flash.each do |key, value|
          %div{:class => key}= h(value)
        = yield
      #footer{:class => 'column span-24'}
        = link_to 'About', about_path
        = link_to 'Home', root_path
        = link_to 'FlockUp on Twitter', 'http://twitter.com/flockup'